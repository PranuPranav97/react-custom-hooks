{
  "compilerOptions": {
    "target": "ES5", // Compile to ES5 for compatibility with older versions
    "module": "commonjs", // Use CommonJS module system
    "moduleResolution": "node", // Resolve modules like Node
    "declaration": true, // Generate declaration files
    "outDir": "./dist", // Output directory
    "esModuleInterop": true, // Enable interoperability with CommonJS modules
    "skipLibCheck": true, // Skip library check to speed up the build
    "strict": true, // Enable strict type checking
    "jsx": "react"
  },
  "include": ["src"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist from the compilation process
}
